/* head tab */

.tab-wrap {
}

.tab-wrap .scroll-wrap {
  height: 180rpx;
}

.tab-wrap .main {
  /* padding: 0 10rpx; */
}

.tab-wrap .active view {
  color: #1976f1 !important;
}

.tab-wrap .tab-item {
  padding: 28rpx 29rpx;
  display: inline-block;
  text-align: center;
  width: 186rpx;
}

.tab-wrap .tab-item > view {
  height: 100%;
}

.tab-wrap .tab-item-img {
  width: 82rpx;
  height: 82rpx;
  margin: 0 auto 10rpx;
}

.tab-wrap .tab-item-img image {
  width: 100%;
  height: 100%;
}

.tab-wrap .tab-item view {
  line-height: 1;
  font-size: 24rpx;
  color: #282828;
}

/* head tab end*/

/* recommend start */

.section {
  border-top: 2rpx solid #e5e5e5;
}

.section .section-title {
  padding: 28rpx;
  line-height: 1;
  font-size: 32rpx;
  color: #282828;
}

.section .section-content {
  border-radius: 10rpx;
  width: 690rpx;
  margin: 0 auto;
}


.section-new {
  border-top: 2rpx solid #E5E5E5;
  padding-bottom: 18rpx;
}

.section-new .section-title {
  padding: 30rpx;
  padding-bottom: 0;
  line-height: 1;
  font-size: 32rpx;
  color: #282828;
}

.section-new .section-content {
  border-radius: 10rpx;
  width: 100%;
  margin: 0 auto;
}

.recommend-wrap {
}

.recommend-wrap .recommend-content {
  padding-bottom: 28rpx;
  /* box-shadow: 0 0 10rpx 4rpx #f7f7f7; */
}

.recommend-wrap .recommend-title {
  color: #f91158;
}

.recommend-wrap .recommend-item {
  width: 328rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
}

.recommend-wrap .recommend-item:last-child {
  margin-right: 0;
}

.recommend-wrap .item-img {
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  height: 200rpx;
  position: relative;
}

.recommend-wrap .item-img image {
  width: 100%;
  height: 100%;
}

.recommend-wrap .item-title {
  width: 100%;
  color: #282828;
  line-height: 1;
  margin-top: 20rpx;
}

.recommend-wrap .item-price {
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #f91158;
  line-height: 1;
}

.recommend-wrap .item-price .delete {
  text-decoration: line-through;
  color: #6e6e6e;
  margin-left: 30rpx;
}

