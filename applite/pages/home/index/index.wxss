/* pages/home/index/index.wxss */
.de{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  background-color: red;
  animation: child-1 1s linear infinite;
  z-index: 9999999;
}
@-webkit-keyframes child-1 {
  from {
    top: 10rpx;
  }

  to {
    top: 56rpx;
  }
}

scroll-view {
  height: 100vh;
}

.hide {
  display: none !important;
}

/* swiper begin */

.swiper-wrap {
  height: 320rpx;
  position: relative;
  background: #fff;
}

.swiper-wrap swiper {
  height: 100%;
}

.swiper-wrap .item-wrap {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  height: 100%;
  padding: 0 30rpx;
}

.swiper-wrap .item-wrap > view {
  border-radius: 10rpx;
  overflow: hidden;
  height: 100%;
  position: relative;
}

.swiper-title {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  padding: 0 40rpx;
  width: 100%;
  overflow: hidden;
  color: #fff;
  
}

.item-wrap image {
  width: 100%;
  height: 100%;
}

.swiper-wrap .wx-swiper-dots {
  position: absolute;
  bottom: 15rpx;
}

.swiper-wrap .wx-swiper-dots {
  position: absolute;
  bottom: 15rpx;
}

.swiper-wrap .wx-swiper-dot {
  height: 10rpx;
  width: 10rpx;
  margin-right: 8rpx !important;
}

.swiper-wrap .wx-swiper-dot:last-child {
  margin-right: 0 !important;
}

/* swiper end */

.empty-margin {
  height: 12rpx;
  background: #f0f0f0;
  width: 100%;
}

