/* pages/mine/index/index.wxss */

.head-wrap {
  width: 100%;
  background: #fff;
  position: relative;
  height: 396rpx;
}

.head-wrap .head-bg {
  height: 100%;
}

.head-wrap .head-bg image {
  width: 100%;
}

.head-wrap .head-img {
  position: absolute;
  top: 135rpx;
  left: 50%;
  transform: translate(-50%, 0);
  width: 184rpx;
  border: 4rpx solid #ffffff;
  height: 184rpx;
  border-radius: 50%;
  overflow: hidden;
}

.head-img image {
  width: 100%;
  height: 100%;

}

.head-wrap .head-nickname {
  position: absolute;
  font-size: 26rpx;
  color: #fff;
  bottom: 28rpx;
  left: 0;
  text-align: center;
  width: 100%;
}

/* head end */

.recommend {
  position: relative;
  padding: 14rpx 0;
  height: 128rpx;
}

.recommend-main {
  padding-left: 152rpx;
  font-size: 28rpx;
  color: #282828;
  padding-top: 10rpx;
}

.recommend-main .text {
  font-size: 24rpx;
  color: #6e6e6e;
}

.recommend-main .logo {
  position: absolute;
  left: 28rpx;
  top: 14rpx;
}

.recommend .item-arrow {
  top: 46rpx!important;
}

/* list start*/

.list-wrap {
  width: 100%;
}

.list-wrap .list-item {
  position: relative;
  padding: 34rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 28rpx;
  color: #6e6e6e;
  line-height: 1;
}

.item-logo {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 15rpx;
  left: 30rpx;
}

.item-logo image {
  width: 100%;
  height: 100%;
}

.list-wrap .item-main {
}

.list-wrap .item-icon {
  position: absolute;
  left: 26rpx;
  top: 34rpx;
  height: 28rpx;
  width: 28rpx;
}

.list-wrap .item-icon image {
  width: 100%;
  height: 100%;
}

.list-wrap .item-content {
  line-height: 1;
  color: #6e6e6e;
  padding-left: 74rpx;
}

.list-wrap .item-arrow {
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  width: 12rpx;
  height: 20rpx;
}

.list-wrap .item-arrow image {
  height: 100%;
  width: 100%;
}

.share-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 98rpx;
  background: none;
  color: inherit;
  border: none;
  padding: 0;
  margin: 0;
  z-index: 100;
}

.share-btn::after {
  border: none;
}

/* list end */

/* mine data start */

.mine-data {
  display: flex;
}

.mine-data-item {
  flex: 1;
  padding: 24rpx 0;
  line-height: 1;
  font-size: 28rpx;
  color: #282828;
  text-align: center;
}

.mine-data-item .item-value {
  color: #1c81d1;
  margin-top: 10rpx;
}

/* mine data end */

.empty-block {
  width: 100%;
  height: 10rpx;
  background: #f0f0f0;
}
