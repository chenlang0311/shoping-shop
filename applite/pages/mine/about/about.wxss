/* pages/mine/contact/contact.wxss */

page {
  height: 100%;
}

.page {
  height: 100%;
  position: relative;
  text-align: center;
  font-size: 20rpx;
  color: 6e6e6e;
  padding-top: 80rpx;
}

.about-logo {
  width: 132rpx;
  height: 132rpx;
  margin: 0 auto;
}

.about-logo image {
  width: 100%;
  height: 100%;
}

.about-word {
  margin-top: 20rpx;
  line-height: 1;
  color: rba(196, 196, 196);
  position: relative;
}

.about-info {
  margin-top: 54rpx;
  font-size: 28rpx;
  padding: 0 70rpx;
  line-height: 40rpx;
  text-align: left;
}

.about-line {
  position: absolute;
  width: 80rpx;
  height: 1rpx;
  background: rgb(25, 118, 241);
  top: 10rpx;
}

.line-right {
  right: 126rpx;
}

.line-left {
  left: 126rpx;
}

.code-wrap {
  width: 258rpx;
  height: 258rpx;
  margin: 54rpx auto 0;
}

.code-wrap image {
  width: 100%;
  height: 100%;
}

.search {
  color: rgb(110, 110, 110);
  margin-top: 20rpx;
  line-height: 1;
}

.tips {
  position: absolute;
  bottom: 28rpx;
  color: rgb(206, 206, 206);
  left: 0;
  width: 100%;
  font-size: 16rpx;
}
