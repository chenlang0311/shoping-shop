/* component/vodeo-btn/video-btn.wxss */

.video-wrap {
  position: fixed;
  bottom: 44rpx;
  right: 44rpx;
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
}

.video-wrap .video-content {
  width: 100%;
  height: 100%;
  position: relative;
}

.video-content image {
  width: 100%;
  height: 100%;
}

.play-animation {
  width: 112rpx;
  height: 112rpx;
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  overflow: hidden;
  border-radius: 50%;
}

.play-wrap {
  position: absolute;
  width: 68rpx;
  height: 56rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;
}

.child {
  width: 16rpx;
  position: relative;
  background: #fff;
  display: inline-block;
  margin-right: 10rpx;
  
}

.child-1 {
  height: 30rpx;
  top: 0;
}

.child-2 {
  height: 56rpx;
}

.child-3 {
  height: 18rpx;
}

.animation > view {
  animation: child-1 1s linear infinite;
  height: 56rpx!important;
  top: 46rpx;
}

.animation .child-2 {
  animation-delay: .2s;
}

.animation .child-3 {
  animation-delay: .5s;
}

.child-3 {
  margin-right: 0;
  
}

@keyframes child-1 {
  0% {
    top: 46rpx;
  }

  50% {
    top: 0;
  }

  100% {
    top: 46rpx;
  }
}

@keyframes child-2 {
  from {
    height: 10rpx;
  }

  to {
    height: 56rpx;
  }
}

.hide {
  display: none;
}
